static int tg3_issue_otp_command(struct tg3 *tp, u32 cmd){
 int i;
 u32 val;

 tw32(OTP_CTRL, cmd | OTP_CTRL_OTP_CMD_START);
 tw32(OTP_CTRL, cmd);


 for (i = 0; i < 100; i++){
  val = tr32(OTP_STATUS);
  if (val & OTP_STATUS_CMD_DONE)
   break;
  udelay(10);
 }

 return (val & OTP_STATUS_CMD_DONE) ? 0 : -EBUSY;
}
